@model IEnumerable<WebApp.Models.Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class=" text-primary">Categories</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary float-right">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>

        <br /><br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.Name</td>
                            <td width="30%">@obj.DisplayOrder</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                        <i class="fa-solid fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No categories found</p>
        }
    </div>

