@model IEnumerable<Product>


@if (Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col-8">
                    <div class="bookmark mt-4">
                        <div class="bookmark-header bg-dark text-light ml-0 container" style="background-color: #f8f9fa; padding: 5px; border-radius: 5px;">
                            <div class="col-6">
                                <i class="fa fa-bookmark-cart"></i>
                                <span style="font-size: 1.2rem; font-weight: bold;">Bookmarks</span>
                            </div>                        
                        </div>
                        <div class="bookmark-body">
                            <div class="d-none d-lg-block">
                                <div class="row" style="color:#821f3d; margin-top:10px;">
                                    <div class="col-lg-2">
                                    </div>
                                    <div class="col-12 col-lg-7">
                                        Details
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Price
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1">
                                    </div>
                                </div>
                            </div>

                            <hr />

                            @foreach(var obj in Model){
                                <div class="row h-100">
                                    <div class="col-4 col-md-2 text-center py-2">
                                    <img class="rounded" src="~/Images/product/@obj.Image" alt="Product image" width="100%" />
                                    </div>
                                    <div class="col-8 col-lg-7">
                                        <h5>@obj.Name</h5>
                                        <div style="font-size:11px;">@obj.ShortDescription</div>
                                    </div>
                                    <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                        <span style="font-size:17px;">@obj.Price.ToString("C")</span>
                                    </div>
                                    <div class="col-12 col-lg-1 p-0 pt-lg-4 text-center">
                                        <a asp-action="Remove" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            }

                            <hr />
                        </div>
                        <div class="bookmark-footer">
                            <div class="row">
                                <div class="col-6 col-md-3 offset-md-9">
                                    <button asp-action="Index" asp-controller="Home" type="submit" class="btn btn-success form-control">
                                        <span>Continue</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
  <p>No bookmarked items</p>  
}