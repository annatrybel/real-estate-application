@model WebApp.Models.ListingsType



<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" readonly class="form-control" />
                    </div>
                </div>


                <div class="form-group row mt-4">
                    <div class="col-12 text-end">
                        <div class="d-inline-block me-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                            <a asp-controller="Categories" asp-action="Index" class="btn btn-success">
                                <i class="fa-solid fa-right-from-bracket"></i> Back
                            </a>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}