@model WebApp.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>

        <dt class="col-sm-2">
            Images
        </dt>
        <dd class="col-sm-10">
            <div class="d-flex overflow-auto">
                @foreach (var image in Model.Images)
                {
                    <img src="~/Images/products/@image.ImageUrl" alt="Product image" class="img-thumbnail me-2" style="max-width:150px; max-height:100px;" />
                }
            </div>
        </dd>

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category?.Name
        </dd>

        <dt class="col-sm-2">
            Listings Type
        </dt>
        <dd class="col-sm-10">
            @Model.ListingsType?.Name
        </dd>
    </dl>

    <form asp-action="Delete" class="d-inline-flex gap-2" style="margin-top: 20px;">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </button>

        <a asp-action="Index" class="btn btn-success">
            <i class="fa-solid fa-right-from-bracket"></i> Back to List
        </a>
    </form>

</div>


